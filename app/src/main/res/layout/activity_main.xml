<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="22"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:background="#EBE6E6"
        android:gravity="bottom|end"
        android:paddingRight="35dp"
        android:paddingBottom="35dp"
        android:textSize="35dp"
        tools:text="0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4">

        <Button
            android:onClick="numberOperation"
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/numberColor"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Button
            android:onClick="numberOperation"
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/numberColor"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Button
            android:onClick="numberOperation"
            android:id="@+id/three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/numberColor"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/div"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/symbolColor"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="numberOperation"
            android:id="@+id/four"
            android:layout_margin="1dp"
            android:background="@color/numberColor"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="4"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:onClick="numberOperation"
            android:id="@+id/five"
            android:layout_margin="1dp"
            android:background="@color/numberColor"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="5"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:onClick="numberOperation"
            android:id="@+id/six"
            android:layout_margin="1dp"
            android:background="@color/numberColor"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="6"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/minus"
            android:layout_margin="1dp"
            android:background="@color/symbolColor"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="-"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="numberOperation"
            android:id="@+id/seven"
            android:layout_margin="1dp"
            android:background="@color/numberColor"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="7"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:onClick="numberOperation"
            android:id="@+id/eight"
            android:layout_margin="1dp"
            android:background="@color/numberColor"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="8"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:onClick="numberOperation"
            android:id="@+id/nine"
            android:layout_margin="1dp"
            android:background="@color/numberColor"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="9"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/symbolColor"
            android:text="*"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/clear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/symbolColor"
            android:text="CLR"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />
        <Button
            android:onClick="numberOperation"
            android:id="@+id/zero"
            android:layout_margin="1dp"
            android:background="@color/numberColor"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="0"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/equal"
            android:layout_margin="1dp"
            android:background="@color/symbolColor"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="="
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/plus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/symbolColor"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>



</LinearLayout>